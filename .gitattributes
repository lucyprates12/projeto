from tkinter import *

def converter():
    real = float(entrada.get())  # Pega o valor digitado
    
    # Cota√ß√µes (atualize esses valores conforme necess√°rio!)
    dolar = real / 5.30
    euro = real / 5.80
    libra = real / 6.90
    bitcoin = real / 250_000  # Cota√ß√£o fict√≠cia
    
    # Atualiza os resultados
    resultado.config(text=(
        f"US$ {dolar:.2f}\n"
        f"‚Ç¨ {euro:.2f}\n"
        f"¬£ {libra:.2f}\n"
        f"‚Çø {bitcoin:.6f}"  # 6 casas decimais para Bitcoin
    ))

# Configura√ß√£o da Janela
janela = Tk()
janela.title("Super Conversor de Moedas üí±")

# Widgets (elementos da interface)
Label(janela, text="Valor em R$:", font=("Arial", 12)).pack(pady=5)
entrada = Entry(janela, font=("Arial", 12))
entrada.pack(pady=5)

Button(janela, text="Converter", command=converter, bg="#4CAF50", fg="white").pack(pady=10)

resultado = Label(janela, text="", font=("Arial", 12, "bold"), justify=LEFT)
resultado.pack()

janela.mainloop()                   
